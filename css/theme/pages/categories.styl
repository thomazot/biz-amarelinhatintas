.catalog-category-view
    .page-title, .toolbars
        display: none

    .col-left
        flex: 0 1 265px
        min-width: 0
        max-width: none

    .col-main
        min-width: 0

    .products
        padding: 0

.category-image
    display: none

.wrapper-toolbar
    display: flex
    justify-content: space-between
    align-items: center

.category-title
    margin: 0

    h1
        margin: 0
        color: var(--color-text)
        text-transform: uppercase
        font-weight: bold
        font-size: 24px

.ias-noneleft
    display: none !important

.category-image
    img
        width: 100%
        object-fit: cover

.category-description
    padding: gap 0
    border: 0

    h3
        color: var(--color-text)
        text-transform: uppercase
        font-weight: bold
        font-size: 24px

    p
        color: var(--color-text)
        font-weight: regular
        font-size: 14px
