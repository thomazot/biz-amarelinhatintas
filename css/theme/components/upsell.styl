.upsell
    @media media-min-sm
        &__title
            color: var(--primary)
            font-weight: bold
            font-size: 20px

    .products
        &__case
            background: none
            box-shadow: none

    .product
        &__name
            color: black
            font-weight: bold
            font-size: 20px

        &__main
            ul
                text-align: left

                li
                    display: flex
                    justify-content: flex-start
                    align-items: center
                    padding: 0 20px
                    min-height: 30px
                    border-radius: 30px
                    font-weight: regular
                    font-size: 14px

                    &:nth-child(odd)
                        background: #F3F3F3

                    &:nth-child(1)
                        background: var(--primary)
                        font-weight: bold