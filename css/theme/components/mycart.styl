.mycart
    .header &
        margin-left: 10px

        @media media-min-lg
            margin-left: auto

        .ico
            width: 28px
            height: 25px

        &__header
            position: relative

            a
                display: flex
                justify-content: center
                align-items: center
                width: 50px
                height: 50px
                border-radius: 50%
                color: black
                transition: all 100ms ease-in-out

                &:hover
                    @media media-min-lg
                        background: var(--primary)

                @media media-max-lg
                    border-radius: var(--radius)
                    background: var(--primary)
                    color: var(--primary-contrast)

            .qtd
                position: absolute
                bottom: 38px
                left: 34px
                display: flex
                justify-content: center
                align-items: center
                width: 22px
                height: 22px
                border-radius: 50%
                background: var(--primary)
                color: var(--primary-contrast)
                font-weight: medium
                font-size: 14px

            .text
                display: none

        &__content
            display: none !important