.frete
    margin-top: gap
    padding-top: (gap / 2)
    border-top: solid 1px var(--border-color)

    &__content
        display: block

    &__title
        border: 0
        background: none
        box-shadow: none
        color: var(--color-text)
        text-transform: uppercase
        font-weight: bold
        font-size: 16px

        .ico
            width: 24px
            height: 24px
            color: var(--primary)

        span
            display: none

        &:after
            content: 'Calcular frete e prazo'

    &__form
        position: relative

        label
            display: none

        .input-box
            width: 100%

        .input-text
            padding-right: 100px
            height: 48px
            border: solid 1px var(--border-color)
            border-radius: var(--radius)
            box-shadow: none

    &__naosei
        color: var(--color-text)
        font-size: 12px
        opacity: .5

    &__actions
        position: absolute
        top: 0
        right: 0

        .btn
            height: 100%
            background: none
            box-shadow: none
            color: var(--primary)
            font-weight: bold
            font-size: 16px

            span
                display: none

            &:before
                content: 'Calcular'